<xml>
	<pragma once="true" />
	<set name="LINK_TOOLID" value="exe"/>
        <set name="LINK_TOOLID" value="dll" if="dynamic_link"/>
        <set name="LINK_TOOLID" value="static_link" if="static_link"/>

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxsdl_ttf}/vendor/include/sdl2_ttf" />
		<compilerflag value="-I${haxelib:hxsdl_ttf}" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${haxelib:hxsdl_ttf}/vendor/include/sdl2_ttf" />
		<compilerflag value="-I${haxelib:hxsdl_ttf}" />
	</files>

	<section if="windows HXCPP_M64">
		<copyFile name="SDL2_ttf.dll" from="${haxelib:hxsdl_ttf}/vendor/lib/Windows/x64/sdl2_ttf" toolid="${LINK_TOOLID}" overwrite="true" />
	</section>

	<section if="windows HXCPP_M32">
		<copyFile name="SDL2_ttf.dll" from="${haxelib:hxsdl_ttf}/vendor/lib/Windows/x86/sdl2_ttf" toolid="${LINK_TOOLID}" overwrite="true" />
	</section>

	<target id="haxe">
		<!--64 bit-->
		<section if="windows HXCPP_M64">
			<lib name="${haxelib:hxsdl_ttf}/vendor/lib/Windows/x64/sdl2_ttf/SDL2_ttf.lib" />
			<lib name="winmm.lib" />
		</section>

		<!--32 bit-->
		<section if="windows HXCPP_M32">
			<lib name="${haxelib:hxsdl_ttf}/vendor/lib/Windows/x86/sdl2_ttf/SDL2_ttf.lib" />
		</section>

		<!--64 bit only-->
		<section if="macos">
			<lib name="${haxelib:hxsdl_ttf}/vendor/lib/macOS/x64/libSDL2_ttf.a" />
		</section>

		<section if="linux || android">
			<lib name="-lSDL2_ttf" />
		</section>

		<!--additional macos flags that maybe do something i don't know bro-->
		<section if="macos || ios">
			<vflag name="-framework" value="OpenGL" />
			<vflag name="-framework" value="Cocoa" />
		</section>
	</target>
</xml>
